{
    "version": "2.0.0",
    "tasks": [
    {
    "type": "cppbuild",
    "label": "C++: gcc build active file",
    "command": "/usr/bin/g++",
    "args": [
    "-fdiagnostics-color=always",
    "-g",
    "${file}",
    "-o",
    "${fileDirname}/${fileBasenameNoExtension}",
    "-lpthread","-lrt"
    ],
    "options": {
    "cwd": "${fileDirname}"
    },
    "problemMatcher": [
    "$gcc"
    ],
    "group": "build",
    "detail": "compiler: /usr/bin/gcc"
    }
    ]
}